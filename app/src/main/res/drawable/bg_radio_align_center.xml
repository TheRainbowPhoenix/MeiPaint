<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@color/button_pressed" />
            <item android:drawable="@drawable/ic_text_align_center" android:left="@dimen/text_dialog_button_padding" android:top="@dimen/text_dialog_button_padding" android:right="@dimen/text_dialog_button_padding" android:bottom="@dimen/text_dialog_button_padding" />
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@color/button_selected" />
            <item android:drawable="@drawable/ic_text_align_center" android:left="@dimen/text_dialog_button_padding" android:top="@dimen/text_dialog_button_padding" android:right="@dimen/text_dialog_button_padding" android:bottom="@dimen/text_dialog_button_padding" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:drawable="@drawable/ic_text_align_center" android:left="@dimen/text_dialog_button_padding" android:top="@dimen/text_dialog_button_padding" android:right="@dimen/text_dialog_button_padding" android:bottom="@dimen/text_dialog_button_padding" />
        </layer-list>
    </item>
</selector>